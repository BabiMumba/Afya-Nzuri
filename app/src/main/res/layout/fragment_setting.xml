<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".Fragment.SettingFragment">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="@dimen/_5sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:title="Mon Profile"
        android:titleTextColor="@color/white"
        android:contentInsetStart="10dp"
        android:contentInsetStartWithNavigation="0dp"
        android:contentInsetEnd="0dp"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/steve"
                    android:id="@+id/profile_imv"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/profile_imv"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steve Jobs"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/profile_name"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bienvenue sur votre profile"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        />

                </LinearLayout>

            </RelativeLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@color/card_background"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Général"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/profile"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        >
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic1_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/round_person_2_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic1_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personnaliser votre profile"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic2_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_payments_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic2_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Methode de Paiement"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic3_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_privacy_tip_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic3_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Politique de confidentialité"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic4_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_system_security_update_good_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic4_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conditions d'utilisation"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic5_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_info_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic5_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A propos de nous"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/ic6_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_call_24"
                                app:tint="@color/primary"
                                />
                            <TextView
                                android:layout_toEndOf="@id/ic6_imv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numero d'urgence"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                android:layout_alignParentEnd="true"
                                />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@color/card_background"
                android:elevation="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paramètres"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        >
                        <Switch
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/notification"
                            android:text="Notification Push"
                            android:drawablePadding="@dimen/_5sdp"
                            tools:ignore="UseSwitchCompatOrMaterialXml"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/_12ssp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:drawableStart="@drawable/outline_notifications_24"
                            android:drawableTint="@color/primary"
                            />
                        <Switch
                            android:id="@+id/notif_msg"
                            android:text="Notification Message"
                            android:drawablePadding="@dimen/_5sdp"
                            tools:ignore="UseSwitchCompatOrMaterialXml"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:drawableStart="@drawable/baseline_message_24"
                            android:drawableTint="@color/primary"
                            />
                        <Switch
                            android:id="@+id/notif_appel"
                            android:text="Urgence"
                            android:drawablePadding="@dimen/_5sdp"
                            tools:ignore="UseSwitchCompatOrMaterialXml"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:drawableStart="@drawable/baseline_perm_phone_msg_24"
                            android:drawableTint="@color/primary"
                            />

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/card_background"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Déconnexion"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_logout_24"
                        android:layout_marginStart="@dimen/_10sdp"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>