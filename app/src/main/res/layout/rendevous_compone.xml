<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- Rendevous component -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proposer un rendez-vous"
        android:textSize="@dimen/_17ssp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/rendezvous_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_12ssp"
            android:text="Date"
            android:padding="@dimen/_10sdp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/rendezvous_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_12ssp"
            android:text="Heure"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/rendezvous_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Votre description du rendez-vous"
        android:textSize="@dimen/_15ssp"
        android:paddingBottom="@dimen/_50sdp"
        android:background="@drawable/background_input_new"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/primary"
        app:cornerRadius="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:id="@+id/rendezvous_send"
        />



</LinearLayout>