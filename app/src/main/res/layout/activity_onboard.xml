<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    tools:context=".View.OnboardActivity">
    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logo_v"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/do1"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.4"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/main_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur\n Afya Nzuri"
            android:textSize="@dimen/_17ssp"
            android:gravity="center_horizontal"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veuillez choisir votre profil"
            android:textSize="@dimen/_15ssp"
            android:gravity="center_horizontal"
            android:textColor="@color/secondary_text"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/btn_patient"
            android:textAllCaps="false"
            android:padding="@dimen/_10sdp"
            app:cornerRadius="@dimen/_10sdp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medecin"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/btn_medecin"
            android:textAllCaps="false"
            android:padding="@dimen/_10sdp"
            app:cornerRadius="@dimen/_10sdp"
            />



    </LinearLayout>

</RelativeLayout>