<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.NotifcationActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="@dimen/_5sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:title="Vos Notifications"
        android:titleTextColor="@color/white"
        android:contentInsetStart="10dp"
        android:contentInsetStartWithNavigation="0dp"
        android:contentInsetEnd="0dp"
        />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:id="@+id/empty_liste"
        />
    <TextView
        android:id="@+id/txt_nofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vos notifications s'afficherons ici"
        android:layout_below="@id/empty_liste"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_15ssp"
        android:textStyle="normal"
        />

</RelativeLayout>