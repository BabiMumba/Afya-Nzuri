<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".Auth.PatientLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/logo_v"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/_25ssp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_border"
                >
                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inscription Medecin"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/primary"

                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Langues parlees"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/background_input_new"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/langue_choise"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/_10sdp"
                    android:padding="@dimen/_7sdp"
                    />
                <EditText
                    android:id="@+id/edt_experiance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_input_new"
                    android:hint="Annee d'experiance"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="number"
                    />
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_input_new"
                    android:hint="Telephone"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="phone"
                    />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_input_new"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:id="@+id/specialiter_choise"
                    android:entries="@array/specialite"
                    android:spinnerMode="dialog"
                    />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_input_new"
                    android:hint="Description"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="textMultiLine"
                    android:paddingBottom="@dimen/_50sdp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inscription"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="@color/primary"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/continue_btn"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/_10sdp"
                    android:padding="@dimen/_7sdp"
                    />
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/loader"
                    android:indeterminate="true"
                    android:visibility="gone"
                    />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>