<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowAnimationStyle">
            @style/MyCustomActivityAnimation</item>
    </style>
    <style name="Base.Theme.Home" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark" >@color/primary</item>
        <!-- <item name="android:statusBarColor" tools:targetApi="l">@color/Accent</item> -->
        <item name="colorAccent">@color/primary</item>
    </style>


    <style name="Theme.HealthCare" parent="Base.Theme.HealthCare" />
    <style name="Theme.Home" parent="Base.Theme.Home" />


    <style name="MyCustomActivityAnimation"
        parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/activity_fade_in_animation</item>
        <item name="android:activityOpenExitAnimation">
            @anim/activity_fade_out_animation</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/activity_fade_in_animation</item>
        <item name="android:activityCloseExitAnimation">
            @anim/activity_fade_out_animation</item>
    </style>
</resources>